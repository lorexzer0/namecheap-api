{
  "name": "namecheap-api",
  "version": "1.0.1",
  "description": "API parser for namecheap.com",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write \"src/**/*.ts\" \"dist/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "build": "tsc",
    "watch": "tsc -w"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lorexzer0/namecheap-api.git"
  },
  "keywords": [
    "Namecheap",
    "API",
    "REST"
  ],
  "author": "Lorex",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lorexzer0/namecheap-api/issues"
  },
  "homepage": "https://github.com/lorexzer0/namecheap-api#readme",
  "devDependencies": {
    "@types/he": "^1.1.2",
    "prettier": "^2.3.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "fast-xml-parser": "^3.19.0",
    "he": "^1.2.0"
  }
}
